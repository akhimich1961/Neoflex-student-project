<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
	
	<changeSet author="Alexey Khimich" id="1">
        <createTable tableName="application">
            <column autoIncrement="true" name="application_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="application_pkey"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="credit_id" type="BIGINT"/>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="applied_offer" type="JSONB"/>
            <column name="sign_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="ses_code" type="INTEGER"/>
            <column name="status_history" type="JSONB">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Alexey Khimich" id="2">
        <createTable tableName="client">
            <column autoIncrement="true" name="client_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="client_pkey"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(255)"/>
            <column name="marital_status" type="VARCHAR(255)"/>
            <column name="dependent_amount" type="INTEGER"/>
            <column name="passport" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="employment" type="JSONB"/>
            <column name="account" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="Alexey Khimich" id="3">
        <createTable tableName="credit">
            <column autoIncrement="true" name="credit_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="credit_pkey"/>
            </column>
            <column name="amount" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="term" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_payment" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="psk" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="payment_schedule" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="insurance_enable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="salary_client" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="credit_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Alexey Khimich" id="4">
        <addForeignKeyConstraint baseColumnNames="client_id" baseTableName="application" constraintName="client_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="client_id" referencedTableName="client" validate="true"/>
    </changeSet>
    <changeSet author="Alexey Khimich" id="5">
        <addForeignKeyConstraint baseColumnNames="credit_id" baseTableName="application" constraintName="credit_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="credit_id" referencedTableName="credit" validate="true"/>
    </changeSet>
</databaseChangeLog>